{% extends "../../components/layout.twig" %}
{% block siteTitle %}Security Advisor Home{% endblock %}
{% block content %}
    {% include "../../components/header.twig" with {
        "title": "Welcome Back, Cassandra",
        "subtitle": "Please note that this application is a prototype and is not ready to be used in production.",
        "breadcrumbs": [
            {
                "label": "Demo Home",
                "link": "$ROOT/",
                "title": "Return to the demo's homepage."
            },
            {
                "label": "Security Advisor Home",
                "link": "$ROOT/admin/home-success/",
                "title": "Return to the security advisor's homepage."
            }
        ]
    } %}
    {% include "../../components/home.twig" with {
        "purposeTitle": "Purpose of the Security Advisor Portal",
        "purposeDescription": "As a security advisor, this portal represents what it might be like to register, login, and view security applications submitted by applicants who are entering the Federal Public Service.",
        "does": [
            "simulate registration with email verification and 2-factor authentication",
            "simulate the login process post-registration",
            "simulate an area to review and download a security clearance application",
            "simulate approving/denying an application",
            "simulate managing your account"
        ],
        "doesNot": [
            "allow you to enter your own information into forms",
            "save any data",
            "allow you to submit an application approval/denial",
            "reflect final copy/content"
        ],
        "toolsTitle": "My Info and Tools",
        "toolsDescription": "Below is a list of handy links that allow you to access your information and tools.",
        "tools": [
            {
                "label": "Review Applications",
                "link": "$ROOT/admin/review-index/",
                "title": "View a list of applications in your department."
            },
            {
                "label": "Manage My Account",
                "link": "$ROOT/admin/account/",
                "title": "Manage your account information, reset your password, etc."
            },
            {
                "label": "Logout",
                "link": "$ROOT/admin/home/",
                "title": "Logout of the application."
            }
        ]
    } %}
{% endblock %}