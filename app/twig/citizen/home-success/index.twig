{% extends "../../components/layout.twig" %}
{% block siteTitle %}Applicant Home{% endblock %}
{% block content %}
    {% include "../../components/header.twig" with {
        "title": "Welcome Back, Jason",
        "subtitle": "Please note that this application is a prototype and is not ready to be used in production.",
        "breadcrumbs": [
            {
                "label": "Demo Home",
                "link": "$ROOT/",
                "title": "Return to the demo's homepage."
            },
            {
                "label": "Applicant Home",
                "link": "$ROOT/citizen/home-success/",
                "title": "Return to the applicant homepage."
            }
        ]
    } %}
    {% include "../../components/home.twig" with {
        "purposeTitle": "Purpose of the Security Screening Application Demo",
        "purposeDescription": "As a citizen, this portal represents what it might be like to register, login, complete, save, and submit an application to receive security clearance with the Government of Canada.",
        "does": [
            "simulate registration with email verification and 2-factor authentication",
            "simulate the login process post-registration",
            "simulate the look and feel of a digitized security form using fake data",
            "simulate managing your account",
            "simulate reviewing comments returned to you about your application"
        ],
        "doesNot": [
            "allow you to enter your own information into forms",
            "save any data",
            "allow you to submit an application",
            "reflect final copy/content"
        ],
        "toolsTitle": "My Info and Tools",
        "toolsDescription": "Below is a list of handy links that allow you to access your information and tools.",
        "tools": [
            {
                "label": "Security Clearance Application",
                "link": "$ROOT/citizen/application/",
                "title": "Open the application tool to create a new application or edit an old one."
            },
            {
                "label": "My Application Feedback",
                "link": "$ROOT/citizen/profile/",
                "title": "View feedback returned to you by a security advisor."
            },
            {
                "label": "Manage My Account",
                "link": "$ROOT/citizen/account/",
                "title": "Manage your account information, reset your password, etc."
            },
            {
                "label": "Logout",
                "link": "$ROOT/citizen/home/",
                "title": "Logout of the application."
            }
        ]
    } %}
{% endblock %}